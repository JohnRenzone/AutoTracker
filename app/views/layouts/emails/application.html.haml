!!! Strict
%html
  %head
    %meta{content: "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title AutoTracker
    :css
      @media only screen and (min-device-width: 541px) {
        .content {
          width: 540px !important;
        }
      }
  %body
    /[if (gte mso 9)|(IE)]
      <table width="540" align="center" cellpadding="0" cellspacing="0" border="0">
      <tr>
      <td>
    %table.content{align: "center", border: "0", cellpadding: "0", cellspacing: "0", style: "width: 100%; max-width: 540px;"}
      %tr
        %td
          %table{align: "center", border: "0", cellpadding: "0", cellspacing: "0", style: "border: 1px solid #ccc; width: 100%; max-width: 540px;color: #0C4060;font-family: 'Verdana', 'Georgia', sans-serif;"}
            %tr
              %td{style: "background-color: #0C4060; "}
                - if @dealership
                  %h4{style: 'background-color: #0C4060; padding: 20px 20px; margin: 0px; text-align: center;color: #fff;font-size: 20px; font-weight: bold;'}
                    = @dealership.title
                - else
                  %table{align: "center", border: "0", cellpadding: "0", cellspacing: "0", style: "width: 100%;"}
                    %tr
                      %td{align: 'center'}
                        = t('brand.name')
            %tr
              %td{align: 'center'}
                %div{style: "background-color: #D6E5F3; padding: 100px 50px;font-style: italic;"}
                  = yield
            %tr{style: "background-color: #fff;"}
              %td{align: 'center'}
                - if @dealership
                  %table{style: "width: 100%; max-width: 540px;"}
                    %tr
                      %td{style: 'text-align:center;'}
                        - if File.exist?("#{Rails.root}/public/images/logo/dealerships/#{@dealership.identifier}.png")
                          %img{src: "#{root_url}/images/logo/dealerships/#{@dealership.identifier}.png"}
                      %td
                        %p{style: 'text-align: right;font-size: 12px;'}
                          Phone:
                          = Rails.application.config.settings.contact.phone
                        %p{style: 'text-align: right;font-size: 12px;'}
                          Website:
                          %a{href: "#{Rails.application.config.settings.contact.website}"}= Rails.application.config.settings.contact.website
    /[if (gte mso 9)|(IE)]
      </td>
      </tr>
      </table>